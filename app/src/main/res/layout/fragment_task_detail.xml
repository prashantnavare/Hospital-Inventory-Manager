<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskDetailScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:id="@+id/textItemType"
                android:text="@string/item"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textItemName"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:text="@string/due_date"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textDueDate"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:text="@string/assigned_to"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/textAssignedTo"
                android:text="@string/none"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:text="@string/task"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textTaskType"
                android:text="@string/calibration"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </TableRow>
        <TableRow
            android:id="@+id/contractExpiryDateRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:text="Contract Expiry:"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textContractExpiryDate"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </TableRow>
        <TableRow
            android:id="@+id/requiredQuantityRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:text="Required Quantity:"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textRequiredQuantity"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:text="@string/priority"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/spinnerPriority"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:spinnerMode="dropdown"
                android:clickable="true" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            >
            <TextView
                android:id="@+id/textInstructionsLabel"
                android:text="@string/instructions"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textInstructions"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:singleLine="false"
                />
        </TableRow>
    </TableLayout>
</ScrollView>